{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src/",
    "paths": {
      "components": ["./components"],
      "containers": ["./containers"],
      "contexts": ["./contexts"],
      "stores": ["./stores"],
      "config": ["./config"],
      "utils": ["./utils"],
      "hooks": ["./hooks"],
      "types": ["./types"],
      "test": ["./test"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"]
}
