{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "./global.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "jest.config.js",
    "jest-setup.js",
    ".eslintrc.cjs"
  ],
  "exclude": ["coverage"]
}
